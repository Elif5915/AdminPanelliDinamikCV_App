@using AdminPanelliDinamikCV_App.Models.Entity
@model List<Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Admin Operations</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>UserName</th>
        <th style="width : 200px"></th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
              @item.UserName
            </td>
         
            <td>
                <a href="/Admin/adminUpdate/@item.Id" class="btn btn-info">Update</a>
                <a href="/Admin/adminDelete/@item.Id" class="btn btn-danger">Remove</a>
            </td>

        </tr>
    }
</table>
<br />
<a href="/Admin/adminAdd/" class="btn btn-dark">Create New User</a>

