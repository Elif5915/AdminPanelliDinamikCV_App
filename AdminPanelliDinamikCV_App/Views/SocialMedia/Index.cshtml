@using AdminPanelliDinamikCV_App.Models.Entity
@model List<SocialMedia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string durum = ""; }

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <section class="content-header">
            <div class="container-fluid">

            </div>
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">My Social Media List</h3>
                            </div>

                            <div class="card-body">

                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Name</th>
                                            <th style="width: 50px">Status</th>
                                            <th style="width : 125px"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Status == true)
                                            {
                                                durum = "Aktif";
                                            }
                                            else
                                            {
                                                durum = "Pasif";
                                            }

                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Name</td>
                                                <td>@durum</td>


                                                <td>
                                                    <a href="/SocialMedia/deleteSocial/@item.Id" class="btn btn-danger btn-sm ">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                    <a href="/SocialMedia/updateSocial/@item.Id" class="btn btn-info btn-sm ">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <br />

                                <button class="btn btn-dark" data-toggle="modal" data-target="#Modal1">Add Social Media</button>
                            </div>

                        </div>

                    </div>

                </div>

            </div>
        </section>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Add Social Media</h2>
                    </div>
                    <form method="post" action="/SocialMedia/newSocialMedia">
                        <div class="modal-body">
                            <label>Name</label>
                            <input type="text" name="Name" class="form-control" />
                            <label>Link</label>
                            <input type="text" name="Link" class="form-control" />
                            <label>Icon</label>
                            <input type="text" name="Icon" class="form-control" />
                            <br />
                            <button class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>

</body>
</html>
